<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_meizi"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/pre9"
        android:contentDescription="@string/app_name" />

    <EditText
        android:id="@+id/edit_mul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_meizi"
        android:text="0"
        android:autofillHints=""
        android:inputType="text"
        android:textAlignment="center"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edit_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_mul"
        android:text="0"
        android:textAlignment="center"
        android:autofillHints=""
        android:inputType="text"
        tools:ignore="LabelFor" />


    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/img_meizi"
        android:layout_below="@id/edit_add"
        android:text="变化" />

</RelativeLayout>